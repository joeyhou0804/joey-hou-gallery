<% layout('layouts/boilerplate')%>
<div class="container justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">New Station 新车站</h5>
                    <form action="/stations" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="location">Location 英文地址</label>
                            <input class="form-control" type="text" id="location" name="station[location]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="date">Date 日期 (YYYY/MM/DD)</label>
                            <input class="form-control" type="text" id="date" name="station[date]" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="train">Train 班次 (No. & Name)</label>
                            <input class="form-control" type="text" id="train" name="station[train]" required>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Images 照片</label>
                            <input class="form-control" type="file" id="image" name="image" multiple>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="haveMap">Is there a route map? 有路线图吗？ (Y/N)</label>
                            <input class="form-control" type="text" id="haveMap" name="station[haveMap]" value="Y" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description 配文</label>
                            <textarea class="form-control" type="text" id="description" name="station[description]"></textarea>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success">Add Station 添加新车站/button>      
                        </div> 
                    </form>
                    <a href="/stations" class="btn btn-secondary active" role="button" aria-pressed="true">Back to All Stations 返回车站列表</a>
                </div>
            </div>
        </div>
    </div>
</div>


